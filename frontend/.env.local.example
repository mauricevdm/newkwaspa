# Environment Variables
# Copy this file to .env.local and fill in the values

# Magento API
NEXT_PUBLIC_MAGENTO_URL=https://api.dermastore.co.za
NEXT_PUBLIC_MAGENTO_GRAPHQL_URL=https://api.dermastore.co.za/graphql
MAGENTO_ADMIN_TOKEN=your-admin-token-here

# AI Services API Gateway
NEXT_PUBLIC_AI_API_URL=https://api.dermastore.co.za/ai

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://dermastore.co.za
NEXT_PUBLIC_SITE_NAME=Dermastore
NEXT_PUBLIC_SITE_DESCRIPTION=Premium skincare products for South Africa

# Analytics
NEXT_PUBLIC_GTM_ID=GTM-XXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# CDN
NEXT_PUBLIC_CDN_URL=https://cdn.dermastore.co.za

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_SKIN_ANALYSIS=true

# Revalidation
REVALIDATE_TOKEN=your-secret-revalidation-token
