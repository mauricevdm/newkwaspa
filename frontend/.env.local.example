# Environment Variables
# Copy this file to .env.local and fill in the values

# API Provider
# - mock (default)
# - magento
NEXT_PUBLIC_API_PROVIDER=mock

# Magento (Headless)
# Public URL can be used by server components; the client will use the proxy path below.
NEXT_PUBLIC_MAGENTO_API_URL=https://your-magento.com/rest/V1
NEXT_PUBLIC_MAGENTO_GRAPHQL_URL=https://your-magento.com/graphql

# Server-only upstream GraphQL URL for the Next.js proxy route (recommended for local dev / avoiding CORS)
MAGENTO_UPSTREAM_GRAPHQL_URL=https://your-magento.com/graphql

# Client-side proxy path (same-origin) used by the Magento provider in the browser
NEXT_PUBLIC_MAGENTO_GRAPHQL_PROXY_PATH=/api/magento/graphql

# Optional: select Magento store view (passed as `Store` header)
MAGENTO_STORE_CODE=default

# AI Services API Gateway
NEXT_PUBLIC_AI_API_URL=https://api.dermastore.co.za/ai

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://dermastore.co.za
NEXT_PUBLIC_SITE_NAME=Dermastore
NEXT_PUBLIC_SITE_DESCRIPTION=Premium skincare products for South Africa

# Analytics
NEXT_PUBLIC_GTM_ID=GTM-XXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# CDN
NEXT_PUBLIC_CDN_URL=https://cdn.dermastore.co.za

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_SKIN_ANALYSIS=true

# Dev backend wake (S3/static dev frontends)
# Set to the API Gateway stage URL created by the dev-ecs-lite Terraform env, e.g.
# https://xxxx.execute-api.af-south-1.amazonaws.com/dev
# (The launch page will call `${BASE}/status` and `${BASE}/wake`)
NEXT_PUBLIC_DEV_WAKE_API_BASE=

# Where /launch should redirect once backend is ready
NEXT_PUBLIC_DEV_APP_URL=/

# Revalidation
REVALIDATE_TOKEN=your-secret-revalidation-token
